<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Slider Tab"
    xtype="dialog">
    <items  jcr:primaryType="cq:TabPanel" xtype="tabpanel">
        <items jcr:primaryType ="cq:WidgetCollection">
            <slides
                jcr:primaryType="cq:Panel"
                title="Slides"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <numberOfSlides
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Number of Slides"
                        name ="./numberOfSlides"
                        xtype="numberfield"/>
                </items>
            </slides>
            <sliderNav
                    jcr:primaryType="cq:Panel"
                    title="Slider Nav"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <sliderNav
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Slider Nav"
                        name ="./sliderNav"
                        xtype="multifield"/>
                </items>
            </sliderNav>
        </items>
    </items>
</jcr:root>