<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Slider Tab Item"
    xtype="dialog">
    <items  jcr:primaryType="cq:TabPanel" xtype="tabpanel">
        <items jcr:primaryType ="cq:WidgetCollection">
            <slideItem
                jcr:primaryType="cq:Panel"
                title="Slide Item"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <imagePath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Image Path"
                        name ="./imagePath"
                        xtype="pathfield"/>
                    <header
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Header"
                        name ="./header"
                        xtype="textfield"/>
                    <paragraph
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Paragraph"
                        name ="./paragraph"
                        xtype="textfield"/>
                </items>
            </slideItem>
        </items>
    </items>
</jcr:root>